@model ResumeBuilder.Models.ViewModels.VMResume

@{
    string GetDates(DateTime? startDate, DateTime? endDate)
    {
        if (!startDate.HasValue)
            return "";
        string startDateText = startDate.Value.ToString("MMM yyyy");
        string endDateText = endDate.HasValue ? endDate.Value.ToString("MMM yyyy") : "Present";
        return startDate + " - " + endDate;
    }
}
<div class="resume">
    <header id="header">
        <!-- resume header with your name and title -->
        <h1>@Model?.PersonalInfo?.FirstName @Model?.PersonalInfo?.LastName</h1>
        <hr>
        <h2>@Model?.ResumeInfo?.JobTitle</h2>
        <hr>
    </header>
    <main>
        <article id="mainLeft">
            <section>
                <h2>CONTACT</h2>
                <br>
                <!-- PHONE NUMBER -->
                <p>
                    <i class="fas fa-phone" aria-hidden="true"></i>
                    @Model?.PersonalInfo?.PhoneNumber
                </p>
                <!-- EMAIL -->
                <p style="word-wrap:anywhere">
                    <a href="mailto:@Model?.PersonalInfo?.Email" target="_blank" rel="noopener noreferrer">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                        @Model?.PersonalInfo?.Email
                    </a>
                </p>
                @if (ViewData["AdditionalContactInfo"] != null)
                {
                    var contacts = (List<AdditionalContactResume>)ViewData["AdditionalContactInfo"];
                    if (contacts != null)
                    {
                        @foreach (var item in contacts)
                        {
                            <p>
                                @if (item.IsHyperlink)
                                {
                                    <a href="@item.Value" target="_blank" rel="noopener noreferrer">
                                        @Html.Raw(@item.GetIcon())
                                        @item.DisplayName
                                    </a>
                                }
                                else
                                {
                                    @Html.Raw(@item.GetIcon())
                                    @item.DisplayName
                                }
                            </p>
                        }
                    }
                }
                <!-- LINKEDIN -->
                @*  <p>
                <a href="@Model?.PersonalInfo?.LinkedInURL" target="_blank" rel="noopener noreferrer">
                <i class="fab fa-linkedin" aria-hidden="true"></i>
                @Model?.PersonalInfo?.FirstName
                </a>
                </p>
                <!-- GITHUB -->
                @if (Model?.PersonalInfo?.GitHubAccount != null)
                {
                <p>
                <a href="https://github.com/@Model?.PersonalInfo?.GitHubAccount" target="_blank" rel="noopener noreferrer">
                <i class="fab fa-github" aria-hidden="true"></i>
                @Model?.PersonalInfo?.GitHubAccount
                </a>
                </p>
                }
                <!-- PORTFOLIO -->
                @if (@Model?.PersonalInfo?.WebsiteURL != null)
                {
                <p>
                <a href="@Model?.PersonalInfo.WebsiteURL" target="_blank" rel="noopener noreferrer">
                <i class="fab fa-dev" aria-hidden="true"></i>
                Website
                </a>
                </p>
                } *@

            </section>
            <section>
                @if (Model?.ResumeInfo?.Skills != null)
                {
                    <h2>SKILLS</h2>
                    @Html.Raw(Model?.ResumeInfo?.Skills)
                }
            </section>
            @if (Model?.ProfileEntries != null)
            {
                <section>
                    <h2>EDUCATION</h2>
                    <br>
                    @foreach (var item in Model?.ProfileEntries)
                    {
                        <h3>@item.Title</h3>
                        <h4>@item.Organization</h4>
                        <h4>@(GetDates(item.StartDate, item.EndDate))</h4>
                        <br>
                    }
                </section>
            }
            @* @if (educationItems != null)
